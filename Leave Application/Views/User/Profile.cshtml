@{
    ViewData["Title"] = "Profil";
    ViewData["type"] = "";
    ViewData["Aplikasi"] = "Leave Application";
    Layout = "_LayoutMazer";
}


<div class="page-heading">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Profile</h3>
            <p class="text-subtitle text-muted">Can view and change account data.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Leave Application</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Profile
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="page-content">
    <div class="alert alert-success alert-dismissible fade show" id="doneUpdate" style="display:none" role="alert">
        <i class="bi bi-check-circle-fill"></i>
        Data updated successfully.
        <button type="button" class="btn-close" data-bs-dismiss="alert"  aria-label="Close"></button>
    </div>
    <div class="alert alert-danger alert-dismissible fade show" id="failUpdate" style="display:none" role="alert">
        <i class="bi bi-check-circle-fill"></i>
        Data failed to update.
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <section class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <button class="btn btn-outline-warning" onclick="openModal()" data-bs-toggle="modal" data-bs-target="#edit" style="float:right"><i class="bi bi-pencil-square"></i> Changing Profile</button>

                    <h4> <span class="text-primary"><i class="bi bi-person"></i></span> Profile Data</h4>
                </div>
                <div class="card-body">
                    <div class="row p-2">
                        <div class="col-lg-5">NIK</div>
                        <div class="col fw-bold profil" id="nikV">Loading...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Full Name</div>
                        <div class="col fw-bold profil" id="namaV">Loading...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Gender</div>
                        <div class="col fw-bold profil" id="genderV">Loading...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Email</div>
                        <div class="col fw-bold profil" id="emailV">Loading...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Phone Number</div>
                        <div class="col fw-bold profil" id="nomorV">Loading...</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    <h4> <span class="text-primary"><i class="bi bi-briefcase"></i></span> Employment Data</h4>
                </div>
                <div class="card-body">
                    <div class="row p-2">
                        <div class="col-lg-5">Manager</div>
                        <div class="col fw-bold profil" id="manajerV">Loading...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Department</div>
                        <div class="col fw-bold profil" id="depV">Loading...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Leave Quota</div>
                        <div class="col fw-bold profil" id="cutiV">Loading...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Employment status</div>
                        <div class="col fw-bold profil" id="statusV">Loading...</div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
<!-- Modal Edit -->
<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Profil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form" class="needs-validation">
                    <div class="form-group">
                        <label>NIK</label>
                        <input type="text" readonly placeholder="Masukan NIK" name="nikE" id="nikE" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>First Name</label>
                                <input type="text" placeholder="Masukan Nama Depan" id="firstnameE" name="firstnameE" class="form-control" />
                                <div class="valid-feedback">
                                    Column is already filled!
                                </div>
                                <div class="invalid-feedback">
                                    Please enter first name!
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input type="text" placeholder="Masukan Nama Belakang" id="lastNameE" name="lastNameE" class="form-control" />
                                <div class="valid-feedback">
                                    Column is already filled!
                                </div>
                                <div class="invalid-feedback">
                                    Please fill in last name!
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" placeholder="Masukan Email" name="emailE" id="emailE" class="form-control" />
                        <div class="valid-feedback">
                            Column is already filled!
                        </div>
                        <div class="invalid-feedback" id="femail">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Gender</label>
                                <select name="genderE" id="genderE" class="form-select">
                                    <option value="">Pilih...</option>
                                    <option value="0">Male</option>
                                    <option value="1">Female</option>
                                </select>
                                <div class="valid-feedback">
                                    Column is already filled!
                                </div>
                                <div class="invalid-feedback">
                                    Please select a valid gender!
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" placeholder="Masukan Nomor Telefon" min="12" maxlength="13" name="phoneNumberE" id="phoneNumberE" class="form-control" />
                                <div class="valid-feedback">
                                    Column is already filled!
                                </div>
                                <div class="invalid-feedback" id="ftelfon">

                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="button" id="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
            <input type="hidden" name="valEmail" id="valEmail" value="0" />
            <input type="hidden" name="tempEmail" id="tempEmail" />
            <input type="hidden" name="tempDep" id="tempDep" />
            <input type="hidden" name="tempManager" id="tempManager" />
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/template-mazer/js-setting/Employee/profil.js"></script>
}