@{
    ViewData["Title"] = "Change Password";
    ViewData["type"] = "";
    ViewData["Aplikasi"] = "Leave Application";
    Layout = "_LayoutMazer";
}


<div class="page-heading">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Change Password</h3>
            <p class="text-subtitle text-muted">Can change old password to new password.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Leave Application</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Change Password
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="page-content">

    <div class="alert alert-success" id="done" style="display:none;" role="alert">
        You have successfully updated your password!
    </div>
    <div class="alert alert-success" id="fail" style="display:none;" role="alert">
        You failed to update your password!
    </div>
    
    <section class="row">
        <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    <h4> <span class="text-primary"><i class="bi bi-pencil-fill"></i></span> Edit Password</h4>
                    <p>
                        You can change your password for security reasons. The Leave application account password is used to access this application.
                    </p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg">
                            <form id="form">
                                <div class="form-group">
                                    <label class="label-left">Old Password</label>
                                    <input type="password" placeholder="Enter Old Password..." name="OldPassword" id="OldPassword" class="form-control form-sandi" />
                                    <div class="invalid-feedback" id="oldPW">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>New Password</label>
                                    <input type="password" placeholder="Enter New Password..." name="NewPassword" id="NewPassword" class="form-control" />
                                    <div class="invalid-feedback" id="newPW">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Confirm New Password</label>
                                    <input type="password" placeholder="Enter Confirm New Password..." name="ConfirmPassword" id="ConfirmPassword" class="form-control" />
                                    <div class="invalid-feedback" id="conPW">

                                    </div>
                                </div>
                                <button type="button" id="submit" class="btn btn-primary btn-block">Save Changes</button>
                            </form>
                        </div>
                        <div class="col-lg hide-small">
                            <center>
                                <img src="/template-mazer/assets/images/logo/Data_security_28.jpg" style="width:300px;" alt="" />
                            </center>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </section>
</div>


@section Scripts{

    <script src="~/template-mazer/js-setting/Employee/ChangePassword.js"></script>
}