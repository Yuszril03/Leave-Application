@{
    ViewData["Title"] = "Data Employees";
    ViewData["type"] = "Data";
    ViewData["Aplikasi"] = "Leave Application";
    Layout = "_LayoutMazer";
}


<div class="page-heading">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Data Employees</h3>
            <p class="text-subtitle text-muted">Can see data on employees who are on leave or work.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Leave Application</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Data Employees
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="page-content">
    <section class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4> <span class="text-primary"><i class="bi bi-list-nested"></i></span>    Data Employees</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="tableEmployee" class="table table-hover">
                            <thead>
                                <tr>
                                    <th>NIK</th>
                                    <th>Employee Name</th>
                                    <th>Gender</th>
                                    <th>Department Name</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
    </section>
</div>
<!-- Modal -->
<div class="modal fade" id="details" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Details Leave Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="idRespon" />
                <div class="row">
                        <p class="fw-bold text-model-respon"><i class="bi bi-person"></i> Employee Data</p>
                        <div class="col-lg">
                            <div class="row p-2">
                                <div class="col-lg-6">NIK</div>
                                <div class="col-lg fw-bold text-model-respon" id="nik">Loading...</div>
                            </div>
                            <div class="row p-2">
                                <div class="col-lg-6">Name</div>
                                <div class="col-lg fw-bold text-model-respon" id="nameEmploy">Loading...</div>
                                <input type="hidden" id="nikUSer" />
                            </div>
                            <div class="row p-2">
                                <div class="col-lg-6">Gender</div>
                                <div class="col-lg fw-bold text-model-respon" id="gender">Loading...</div>
                            </div>
                            <div class="row p-2">
                                <div class="col-lg-6">Email</div>
                                <div class="col-lg fw-bold text-break text-model-respon" id="email">Loading...</div>
                            </div>
                            <div class="row p-2">
                                <div class="col-lg-6">Phone Number</div>
                                <div class="col-lg fw-bold text-model-respon" id="phone">Loading...</div>
                            </div>

                        </div>
                    <div class="col-lg">
                        <div class="row p-2">
                            <div class="col-lg">Department Name</div>
                            <div class="col-lg fw-bold text-model-respon" id="dept">Loading...</div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg">Leave Quota</div>
                            <div class="col-lg fw-bold text-model-respon" id="quota">Loading...</div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg">Leave Status</div>
                            <div class="col-lg fw-bold text-model-respon" id="status">Loading...</div>
                            <input type="hidden" id="totalHIDE" />
                        </div>
                       
                    </div>
                </div>
                <p class="fw-bold text-model-respon mt-2 "><i class="bi bi-file-earmark"></i> Leave Data</p>
                <div class="table-responsive">
                    <table id="tableDetail" class="table table-hover">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Leave Name</th>
                                <th>Leave Type</th>
                                <th>Leave Period</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/template-mazer/js-setting/Employee/DataEmployee.js"></script>
}