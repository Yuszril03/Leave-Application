@{
    ViewData["Title"] = "Profil";
    ViewData["type"] = "";
    ViewData["Aplikasi"] = "Leave Application";
    Layout = "_LayoutMazer";
}


<div class="page-heading">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Profil</h3>
            <p class="text-subtitle text-muted">Navbar will appear in top of the page.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Leave Application</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Profil
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="page-content">
    <section class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <button class="btn btn-outline-warning" onclick="openModal()" data-bs-toggle="modal" data-bs-target="#edit" style="float:right"><i class="bi bi-pencil-square"></i> Edit Profil</button>

                    <h4> <span class="text-primary"><i class="bi bi-person"></i></span> Data Profil</h4>
                </div>
                <div class="card-body">
                    <div class="row p-2">
                        <div class="col-lg-5">NIK</div>
                        <div class="col fw-bold profil" id="nikV">Memuat...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Nama Lengkap</div>
                        <div class="col fw-bold profil" id="namaV">Memuat...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Jenis Kelamin</div>
                        <div class="col fw-bold profil" id="genderV">Memuat...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Email</div>
                        <div class="col fw-bold profil" id="emailV">Memuat...</div>
                    </div>
                    <div class="row p-2">
                        <div class="col-lg-5">Nomor Telefon</div>
                        <div class="col fw-bold profil" id="nomorV">Memuat...</div>
                    </div>
                </div>
            </div>
        </div>
            <div class="col-lg">
                <div class="card">
                    <div class="card-header">
                        <h4> <span class="text-primary"><i class="bi bi-briefcase"></i></span> Data Pekerjaan</h4>
                    </div>
                    <div class="card-body">
                        <div class="row p-2">
                            <div class="col-lg-5">Manajer</div>
                            <div class="col fw-bold profil" id="manajerV">Memuat...</div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg-5">Departemen</div>
                            <div class="col fw-bold profil" id="depV">Memuat...</div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg-5">Kuota Cuti</div>
                            <div class="col fw-bold profil" id="cutiV">Memuat...</div>
                        </div>
                        <div class="row p-2">
                            <div class="col-lg-5">Status Kerja</div>
                            <div class="col fw-bold profil" id="statusV">Memuat...</div>
                        </div>
                    </div>
                </div>
            </div>
            </section>
</div>
<!-- Modal Edit -->
<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Profil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form" class="needs-validation">
                    <div class="form-group">
                        <label>NIK</label>
                        <input type="text" readonly placeholder="Masukan NIK" name="nikE" id="nikE" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Nama Depan</label>
                                <input type="text" placeholder="Masukan Nama Depan" id="firstnameE" name="firstnameE" class="form-control" />
                                <div class="valid-feedback">
                                    Benar!
                                </div>
                                <div class="invalid-feedback">
                                    Harap isi nama depan!
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Nama Belakang</label>
                                <input type="text" placeholder="Masukan Nama Belakang" id="lastNameE" name="lastNameE" class="form-control" />
                                <div class="valid-feedback">
                                    Benar!
                                </div>
                                <div class="invalid-feedback">
                                    Harap isi nama belakang!
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" placeholder="Masukan Email" name="emailE" id="emailE" class="form-control" />
                        <div class="valid-feedback">
                            Benar!
                        </div>
                        <div class="invalid-feedback" id="femail">

                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Jenis Kelamin</label>
                                <select name="genderE" id="genderE" class="form-select">
                                    <option value="">Pilih...</option>
                                    <option value="0">Pria</option>
                                    <option value="1">Wanita</option>
                                </select>
                                <div class="valid-feedback">
                                    Benar!
                                </div>
                                <div class="invalid-feedback">
                                    Harap pilih jenis kelamin yang valid!
                                </div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Nomor Telefon</label>
                                <input type="text" placeholder="Masukan Nomor Telefon" min="12" maxlength="13" name="phoneNumberE" id="phoneNumberE" class="form-control" />
                                <div class="valid-feedback">
                                    Benar!
                                </div>
                                <div class="invalid-feedback" id="ftelfon">
                                    
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kembali</button>
                        <button type="button" id="submit" class="btn btn-primary">Simpan Perubahan</button>
                    </div>
                </form>
            </div>
            <input type="hidden" name="valEmail" id="valEmail" value="0" />
            <input type="hidden" name="tempEmail" id="tempEmail" />
            <input type="hidden" name="tempDep" id="tempDep" />
            <input type="hidden" name="tempManager" id="tempManager" />
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/template-mazer/js-setting/Employee/profil.js"></script>
}