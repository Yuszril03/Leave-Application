@{
    ViewData["Title"] = "Edit Kata Sandi";
    ViewData["type"] = "";
    ViewData["Aplikasi"] = "Leave Application";
    Layout = "_LayoutMazer";
}


<div class="page-heading">
    <div class="row">
        <div class="col-12 col-md-6 order-md-1 order-last">
            <h3>Edit Kata Sandi</h3>
            <p class="text-subtitle text-muted">Navbar will appear in top of the page.</p>
        </div>
        <div class="col-12 col-md-6 order-md-2 order-first">
            <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Leave Application</a></li>
                    <li class="breadcrumb-item active" aria-current="page">
                        Edit Kata Sandi
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<div class="page-content">
    <section class="row">
        <div class="col-lg">
            <div class="card">
                <div class="card-header">
                    <h4> <span class="text-primary"><i class="bi bi-pencil-fill"></i></span> Mengubah Kata Sandi</h4>
                    <p>
                        Wrap your content with <code>.avatar</code> class and wrap your text in
                        <code>.avatar</code>-content
                        to create a avatar.You have to use inline
                        attributes to set height width of image in default avatar.
                    </p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg">
                            <form>
                                <div class="form-group">
                                    <label class="label-left">Kata Sandi Lama</label>
                                    <input type="password" placeholder="Masukan Kata Sandi Lama" name="OldPassword" id="OldPassword" class="form-control form-sandi" />
                                </div>
                                <div class="form-group">
                                    <label>Kata Sandi Baru</label>
                                    <input type="password" placeholder="Masukan Kata Sandi Baru" name="NewPassword" id="NewPassword" class="form-control" />
                                </div>
                                <div class="form-group">
                                    <label>Konfirmasi Kata Sandi Baru</label>
                                    <input type="password" placeholder="Masukan Konfirmasi Kata Sandi Baru" name="ConfirmPassword" id="ConfirmPassword" class="form-control" />
                                </div>
                                <button class="btn btn-primary btn-block">Simpan</button>
                            </form>
                        </div>
                        <div class="col-lg hide-small">
                            <center>
                                <img src="/template-mazer/assets/images/logo/Data_security_28.jpg" style="width:300px;" alt="" />
                            </center>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
       
    </section>
</div>
<!-- Modal Edit -->
<div class="modal fade" id="edit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Profil</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label>NIK</label>
                        <input type="text" readonly placeholder="Masukan NIK" name="NIK" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Nama Depan</label>
                                <input type="text" placeholder="Masukan Nama Depan" name="FirstName" class="form-control" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Nama Belakang</label>
                                <input type="text" placeholder="Masukan Nama Belakang" name="LastName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" placeholder="Masukan Email" name="Email" class="form-control" />
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Jenis Kelamin</label>
                                <select name="Gender" class="form-select">
                                    <option value="0">Pria</option>
                                    <option value="1">Wanita</option>
                                </select>
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Nomor Telefon</label>
                                <input type="text" placeholder="Masukan Nomor Telefon" name="phoneNumber" class="form-control" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
@section Scripts{

    <script src="~/template-mazer/js-setting/Employee/spesial.js"></script>
}