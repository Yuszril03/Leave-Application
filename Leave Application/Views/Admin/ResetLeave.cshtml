@{
    ViewData["Title"] = "Leave Application Admin Page";
    Layout = "_AdminLayout";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-2 text-gray-800">Reset Leave Quota</h1>
</div>

<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Warning!</strong> You're gonna change all the leave quota of employees here.
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>

<div class="col-lg-12">
    <div class="card shadow mb-4">
        <div class="card-body">
            <form class="needs-validation" id="formUpdate" novalidate>
                <div class="form-group">
                    <label for="quota" class="col-form-label">Leave Quota</label>
                    <input type="number" class="form-control" id="quota" required>
                    <small class="form-text text-muted">Leave Quota will be accumulated.</small>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill the field!
                    </div>
                </div>
                <button class="btn btn-block btn-outline-danger mt-4" id="btnUpdate" type="submit">
                    Reset
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/resetleave.js" asp-append-version="true"></script>
}