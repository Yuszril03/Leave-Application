@{
    ViewData["Title"] = "Leave Application Admin Page";
    Layout = "_AdminLayout";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-2 text-gray-800">Edit Employee</h1>
    <button class="d-none d-sm-inline-block btn btn-info btn-icon-split shadow-sm" id="btnUpdate" form="formUpdate" type="submit">
        <span class="icon text-white-50">
            <i class="fa fa-tasks" aria-hidden="true"></i>
        </span>
        <span class="text">Save</span>
    </button>
</div>

<div class="col-lg-12">
    <div class="card shadow mb-4">
        <div class="card-body">
            <form class="needs-validation" id="formUpdate" novalidate>
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            <label for="nik" class="col-form-label">NIK</label>
                            <input type="number" class="form-control" id="nik" required disabled>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill the field!
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <div class="form-row">
                                <div class="col">
                                    <label for="firstName" class="col-form-label">First Name</label>
                                    <input type="text" class="form-control" id="firstName" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please fill the field!
                                    </div>
                                </div>
                                <div class="col">
                                    <label for="lastName" class="col-form-label">Last Name</label>
                                    <input type="text" class="form-control" id="lastName" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please fill the field!
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            <label for="email" class="col-form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" placeholder="name@example.com" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill a valid email!
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="labelRadio" class="col-form-label">Gender</label>
                            <div class="row ml-1" id="labelRadio">
                                <div class="custom-control custom-radio">
                                    <input type="radio" class="custom-control-input" id="male" name="gender" value="0" required>
                                    <label class="custom-control-label" for="male">Male</label>
                                </div>
                                <div class="custom-control custom-radio ml-3">
                                    <input type="radio" class="custom-control-input" id="female" name="gender" value="1" required>
                                    <label class="custom-control-label" for="female">Female</label>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <div class="invalid-feedback">
                                        Please select a valid gender!
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col">
                        <div class="form-group">
                            <label for="phoneNumber" class="col-form-label">Phone Number</label>
                            <input type="number" class="form-control" id="phoneNumber" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please fill the field!
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label for="department" class="col-form-label">Department</label>
                            <select id="department" class="custom-select" required></select>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please select a valid department!
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="manager" class="col-form-label">Manager</label>
                            <div class="row-fluid">
                                <select class="selectpicker form-control" data-live-search="true" data-show-subtext="true" id="manager">
                                </select>
                            </div>
                            <small class="form-text text-muted">You can empty this field.</small>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
}

@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
    <script src="~/js/editemployee.js" asp-append-version="true"></script>
}
