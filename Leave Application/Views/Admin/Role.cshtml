@{
    ViewData["Title"] = "Leave Application Admin Page";
    Layout = "_AdminLayout";
}

<!-- Page Heading -->
<h1 class="h3 mb-2 text-gray-800">Roles Data</h1>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>NIK</th>
                        <th>Roles</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="updateModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-sm modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Roles</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="detailData">
                <div class="container-fluid">
                    <div class="form-group">
                        <form id="formUpdate">
                            <div class="custom-checkbox custom-control">
                                <input class="custom-control-input" type="checkbox" id="employee" value="1" disabled checked>
                                <label class="custom-control-label" for="employee">Employee</label>
                            </div>
                            <div class="custom-checkbox custom-control">
                                <input class="custom-control-input" type="checkbox" id="manager" value="2">
                                <label class="custom-control-label" for="manager">Manager</label>
                            </div>
                            <div class="custom-checkbox custom-control">
                                <input class="custom-control-input" type="checkbox" id="admin" value="3">
                                <label class="custom-control-label" for="admin">Admin</label>
                            </div>
                            <input type="hidden" id="nik" />
                            <button class="btn btn-block btn-outline-success mt-4" id="btnUpdate" type="button">
                                Save
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/role.js" asp-append-version="true"></script>
}