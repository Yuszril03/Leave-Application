@{
    ViewData["Title"] = "Leave Application Admin Page";
    Layout = "_AdminLayout";
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-2 text-gray-800">Edit Department</h1>
    <button class="d-none d-sm-inline-block btn btn-info btn-icon-split shadow-sm" id="btnUpdate" form="formUpdate" type="submit">
        <span class="icon text-white-50">
            <i class="fa fa-tasks" aria-hidden="true"></i>
        </span>
        <span class="text">Save</span>
    </button>
</div>

<div class="col-lg-12">
    <div class="card shadow mb-4">
        <div class="card-body">
            <form class="needs-validation" id="formUpdate" novalidate>
                <div class="form-group">
                    <label for="departmentId" class="col-form-label">Department ID</label>
                    <input type="number" class="form-control" id="departmentId" required disabled>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill the field!
                    </div>
                </div>
                <div class="form-group">
                    <label for="departmentName" class="col-form-label">Department Name</label>
                    <input type="text" class="form-control" id="departmentName" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Please fill the field!
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/editdepartment.js" asp-append-version="true"></script>
}
